<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragment.DetailsFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Watches"
            android:textSize="18sp"
            android:textColor="#000"
           />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Watches"
            android:textSize="15sp"
            android:textColor="#000"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="5500"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#C52020" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3.5"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="#FF0E0E"
                android:layout_marginTop="5dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ratingCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="(5)"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:textColor="#C52020" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="jdjdjjdjjdjddj djjdjdjjdjjdj djdjjdjjdj djjdjdjjjddj djjdjdjjdjjdjjdjd djjdjjdjjdjjdjjdj sjjsususujdjdjdkkskks"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            />

        <Button
            android:id="@+id/addToFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Favourite"
            android:layout_marginTop="10dp"
            android:background="#0866B1"
            android:padding="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>